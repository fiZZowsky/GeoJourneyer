@page "/"
@inject AuthState AuthState
@inject NavigationManager Navigation

<div class="hero">
    <div class="hero-content">
        <h1>Explore the world</h1>
        <p>Discover new destinations and experiences</p>
        <a class="cta-btn" href="#" @onclick="Go" @onclick:preventDefault="true">Get Started</a>
    </div>
</div>

<section class="features">
    <div class="feature">
        <h2>Popular Destinations</h2>
        <p>Explore our list of the most popular travel destinations around the globe.</p>
    </div>
    <div class="feature">
        <h2>Special Offers</h2>
        <p>Take advantage of our exclusive travel deals and discounts.</p>
    </div>
    <div class="feature">
        <h2>Travel Guides</h2>
        <p>Get tips and advice for your next adventure with our comprehensive travel guides.</p>
    </div>
</section>

@code {
    private void Go()
    {
        var target = AuthState.IsLoggedIn ? "/destinations" : "/login";
        Navigation.NavigateTo(target);
    }
}